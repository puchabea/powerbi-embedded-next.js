generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id        String   @id @default(cuid())
  name      String
  embedUrl  String

  width     Float    @default(1140) // px
  height    Float    @default(541)  // px 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

